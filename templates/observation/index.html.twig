{% extends 'base.html.twig' %}

{% block title %}Observation index{% endblock %}

{% block body %}
    <h1>Observation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description_observation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for observation in observations %}
            <tr>
                <td>{{ observation.id }}</td>
                <td>{{ observation.descriptionObservation }}</td>
                <td>
                    <a href="{{ path('app_observation_show', {'id': observation.id}) }}">show</a>
                    <a href="{{ path('app_observation_edit', {'id': observation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_observation_new') }}">Create new</a>
{% endblock %}
